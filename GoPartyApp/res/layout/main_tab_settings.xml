<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eee"
        android:orientation="vertical" >
        
        <LinearLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:id="@+id/title" 
  			android:background="@drawable/title_bar"
  			android:gravity="center_horizontal|center_vertical"  >  
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="个人信息"
        		android:textSize="20sp"		
				android:textColor="#ffffff" />       
			</LinearLayout>
		<ScrollView
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:scrollbarStyle="outsideOverlay" 
    		 >
        	<LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="vertical" >
            <RelativeLayout
                		android:id="@+id/userFaceBar"
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:layout_marginTop="14dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:onClick="showFaceImageDialog"
            			android:background="@drawable/preference_first_item" >

            			<ImageView
            			    android:id="@+id/iv_setting_user_face"
            			    android:layout_width="60dp"
            			    android:layout_height="60dp"
            			    android:padding="5dp"
            			    android:layout_alignParentBottom="true"
            			    android:src="@drawable/user_face_default" />
            			<TextView
            			    android:id="@+id/text_user_name"
            			    android:layout_width="wrap_content"
            			    android:layout_height="wrap_content"
            			    android:layout_alignParentTop="true"
            			    android:layout_toRightOf="@+id/iv_setting_user_face"
            			    android:padding="5dp"
            			    android:layout_marginTop="5dp"            			    
            			    android:text="HelloParty"
            			    android:textColor="#000"
            			    android:textSize="17sp" />
            			<TextView
            			    android:layout_width="wrap_content"
            			    android:layout_height="wrap_content"
            			    android:layout_alignParentBottom="true"
            			    android:layout_toRightOf="@+id/iv_setting_user_face"
            			    android:padding="5dp"
            			    android:layout_marginTop="3dp"
            			    android:text="号码: 8888"
            			    android:textColor="#000"
            			    android:textSize="12sp" />
            			<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:clickable="true"
        					android:src="@drawable/mm_submenu" />     					
      				</RelativeLayout>
      				
            		<RelativeLayout
      				    android:layout_width="fill_parent"
      				    android:layout_height="wrap_content"
      				    android:background="@drawable/preference_item"
      				    android:clickable="true"
      				    android:gravity="center_vertical" >

      				    <TextView
      				        android:id="@+id/textview_nickname_label"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:padding="8dp"
      				        android:text="昵称"
      				        android:textColor="#000"
      				        android:textSize="17sp" />

      				    <ImageView
      				        android:id="@+id/imageView_nickename_arrow"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:scaleType="matrix"
      				        android:src="@drawable/mm_submenu" />

      				    <TextView
      				        android:id="@+id/textview_nickname"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentTop="true"
      				        android:layout_toLeftOf="@+id/imageView_nickename_arrow"
      				        android:padding="8dp"
      				        android:text="hellowParty"
      				        android:textColor="#000"
      				        android:textSize="17sp" />
      				</RelativeLayout>
      				
            		<!-- mobile -->
            		<RelativeLayout
      				    android:layout_width="fill_parent"
      				    android:layout_height="wrap_content"
      				    android:background="@drawable/preference_item"
      				    android:clickable="true"
      				    android:gravity="center_vertical" >

      				    <TextView
      				        android:id="@+id/textview_mobile_label"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:padding="8dp"
      				        android:text="手机号"
      				        android:textColor="#000"
      				        android:textSize="17sp" />

      				    <ImageView
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:scaleType="matrix"
      				        android:src="@drawable/mm_submenu" />
      				</RelativeLayout>

            		<!-- birthday -->				
      				<RelativeLayout
      				    android:layout_width="fill_parent"
      				    android:layout_height="wrap_content"
      				    android:background="@drawable/preference_last_item"
      				    android:clickable="true"
      				    android:gravity="center_vertical" >

      				    <TextView
      				        android:id="@+id/textview_birthday_label"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:padding="8dp"
      				        android:text="出生日期"
      				        android:textColor="#000"
      				        android:textSize="17sp" />

      				    <ImageView
      				        android:id="@+id/imageView_birthday_arrow"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:scaleType="matrix"
      				        android:src="@drawable/mm_submenu" />


      				</RelativeLayout>
      				
      				<!-- sex --> 				
            		<RelativeLayout
      				    android:layout_width="fill_parent"
      				    android:layout_height="wrap_content"
      				    android:layout_marginTop="14dp"
      				    android:background="@drawable/preference_first_item"
      				    android:clickable="true"
      				    android:gravity="center_vertical" >

      				    <TextView
      				        android:id="@+id/textview_sex_label"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:padding="8dp"
      				        android:text="性别"
      				        android:textColor="#000"
      				        android:textSize="17sp" />

      				    <ImageView
      				        android:id="@+id/imageView_sex_arrow"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:scaleType="matrix"
      				        android:src="@drawable/mm_submenu" />

      				    <TextView
      				        android:id="@+id/textview_sex"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentTop="true"
      				        android:layout_toLeftOf="@+id/imageView_sex_arrow"
      				        android:padding="8dp"
      				        android:text="女"
      				        android:textColor="#000"
      				        android:textSize="17sp" />
      				</RelativeLayout>  		

      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/preference_item" >
            			<TextView
      				        android:id="@+id/textview_country_label"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:padding="8dp"
      				        android:text="地区"
      				        android:textColor="#000"
      				        android:textSize="17sp" />

      				    <ImageView
      				        android:id="@+id/imageView_country_arrow"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:scaleType="matrix"
      				        android:src="@drawable/mm_submenu" />

      				    <TextView
      				        android:id="@+id/textview_country"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentTop="true"
      				        android:layout_toLeftOf="@+id/imageView_country_arrow"
      				        android:padding="8dp"
      				        android:text="广东 深圳"
      				        android:textColor="#000"
      				        android:textSize="17sp" />		
      				</RelativeLayout>
      				
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/preference_last_item" >
            			<TextView
      				        android:id="@+id/textview_signiture_label"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:padding="8dp"
      				        android:text="个性签名"
      				        android:textColor="#000"
      				        android:textSize="17sp" />

      				    <ImageView
      				        android:id="@+id/imageView_signiture_arrow"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentRight="true"
      				        android:layout_centerVertical="true"
      				        android:scaleType="matrix"
      				        android:src="@drawable/mm_submenu" />

      				    <TextView
      				        android:id="@+id/textview_signiture"
      				        android:layout_width="wrap_content"
      				        android:layout_height="wrap_content"
      				        android:layout_alignParentTop="true"
      				        android:layout_toLeftOf="@+id/imageView_signiture_arrow"
      				        android:padding="8dp"
      				        android:text="2014年的..."
      				        android:textColor="#000"
      				        android:textSize="17sp" />					
      				</RelativeLayout>
      				
      				<!--   account   -->
      				
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:layout_marginTop="14dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/preference_first_item" >
            			<TextView
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="QQ帐号"
        					android:textSize="17sp"		
							android:textColor="#000" />
            			<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:src="@drawable/mm_submenu" />      					
      				</RelativeLayout>
      				<RelativeLayout
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/preference_last_item" >
            			<TextView
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:padding="8dp" 
        					android:text="微信账号"
        					android:textSize="17sp"		
							android:textColor="#000" /> 
						<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"        	     	
        					android:scaleType="matrix"
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:src="@drawable/mm_submenu" />      					
      				</RelativeLayout>
      				
      			
      				
      				
      				<Button 
      				    android:layout_width="fill_parent" 
        				android:layout_height="wrap_content"
        				android:layout_marginTop="14dp"
        				android:layout_marginBottom="14dp"
        				android:layout_marginLeft="12dp"
        				android:layout_marginRight="12dp"
        				android:padding="4dp" 
        				android:text="退出登录"
        				android:textSize="18sp"		
						android:textColor="#fff"
						android:gravity="center"
						android:background="@drawable/btn_style_red"
						android:onClick="exit_settings"
      				    />     	
        	
        	</LinearLayout>
    </ScrollView>
</LinearLayout>
