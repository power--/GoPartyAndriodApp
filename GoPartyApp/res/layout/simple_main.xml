<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/tab_bg_new" >

        <RelativeLayout
            android:id="@+id/home_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            
                <ImageView
                    android:id="@+id/home_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/goparty_home" />
                
                	            <ImageView
	                android:id="@+id/home_bg_image"
	                android:layout_width="match_parent"
	                android:layout_height="65dp"
	                android:src="@drawable/goparty_nav_menu_selected_bg" />
                

                <TextView
                    android:id="@+id/home_text"
                    android:layout_alignBottom = "@id/home_bg_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/home"
                    android:textColor="#82858b" />
  

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contact_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

                <ImageView
                    android:id="@+id/contact_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/goparty_contact" />
                <ImageView
                    android:id="@+id/contact_bg_image"
	                android:layout_width="match_parent"
	               
	                android:layout_height="65dp"
	                android:src="@drawable/goparty_nav_menu_selected_bg" />
                
                <TextView
                    android:id="@+id/contact_text"
                    android:layout_alignBottom = "@id/contact_bg_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/contact"
                    android:textColor="#82858b" />
            

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/event_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

                <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/goparty_event" />

                <ImageView
                    android:id="@+id/event_bg_image"
	                android:layout_width="match_parent"
	                android:layout_height="65dp"
	                android:src="@drawable/goparty_nav_menu_selected_bg" />
                
                <TextView
                    android:id="@+id/event_text"
                    android:layout_alignBottom = "@id/event_bg_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/event"
                    android:textColor="#82858b" />
                
                
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

                <ImageView
                    android:id="@+id/setting_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/goparty_setting" />

                <ImageView
                    android:id="@+id/setting_bg_image"
	                android:layout_width="match_parent"
	                android:layout_height="65dp"
	                android:src="@drawable/goparty_nav_menu_selected_bg" />
                
                <TextView
                    android:id="@+id/setting_text"
                    android:layout_alignBottom = "@id/setting_bg_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/setting"
                    android:textColor="#82858b" />
                
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>